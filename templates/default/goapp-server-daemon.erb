#!/bin/sh

case $1 in
  start)
     echo $$ > <%= @pid_file %>;
     cd <%= @release_path %>;
     exec 2>&1 <%= @release_path %>/bin/goapp_<%= @application_name %>_server -c <%= @config_file %> -custom_config_path=<%= @custom_config_path %>  1>><%= @output_file %>
     ;;
   stop)
     kill `cat <%= @pid_file %>` ;;
   restart)
     stop ; echo "Sleeping..."; sleep 1 ;
     start
     ;;
   *)  
     echo "usage: goapp-<%= @application_name %>-server-daemon {start|stop|restart}" ;;
esac
exit 0
